.box {
  background: #e7e7e7;
  min-height: 100vh;
  width: 100%;
}
.head {
  width: 100%;
  height: 130px;
}
.head image {
  width: 100%;
  height: 100%;
}

.avatar {
  position: absolute;
  top: 72px;
  left: 25px;
  right: 25px;
  height: 78px;
  background: #fff;
  border-radius: 10px;
  padding: 0 19px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
}
.avatar .grn {
  text-align: center;
  color: #3FB67F;
}
.avatar image {
  width: 67px;
  height: 65px;
  transform: translateY(-39px);
  border: 1px solid #fff;
  border-radius:50%;
}


.list-split {
  height: 30px;
  width: 100%;
  /* background: #e7e7e7; */
}

.list-box {
  background: #fff;
}
.list {
  /* height: 56px; */
  padding: 16px 16px 16px 32px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}
.list .icon {
  width: 20px;
  height: 20px;
  vertical-align:middle;
  margin-right: 10px;
}
.list .arrow-right {
  width: 16px;
  height: 16px;
}
.list view view {
  display:inline-block;
  font-size: 28rpx;
}