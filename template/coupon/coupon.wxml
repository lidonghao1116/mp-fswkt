<template name="coupon">
    <view class="coupon-box font-extra-sm" catchtap="closeCoupon" data-close='1'> 
        <view class="main">
            <view class="head">
                <image src="http://fengsheng-image.oss-cn-shenzhen.aliyuncs.com/sys/share-logo.jpg" class="icon" />
            </view>
            <view class="coupon" wx-if="{{!hasGotCoupon}}"   bindtap="getCoupon">
                <view class="item1">丰盛微课堂</view>
                <view class="item2">发了一个红包，价值连城</view>
                <view class="font-lg color-y item3">正在派现金红包</view>
                <view class="font-lg color-y item4">快来领！</view>
                <form bindsubmit="formSubmit" bindreset="formReset" report-submit> 
                    <view class="openBtn-box {{granting?'ani-rotate':''}}">
                            <button formType="submit" class="open-btn">开</button>
                    </view>
                </form>
                <view>
                    <text>已经派出</text>
                    <text class="color-y">{{totalMoney}}</text>
                    <text>元红包</text>
                </view>
                <view>派完为止</view>
            </view>
            <view class="coupon" wx-if="{{hasGotCoupon}}">
                <view class="item1">丰盛微课堂</view>
                <view class="font-lg color-y item5">恭喜你！</view>
                <view class="font-lg color-y item6">
                    <text>获得</text>
                    <text>{{couponMoney}}</text>
                    <text>元现金券1张</text>
                </view>
                <view class="info-box font-lg">
                    <view class="info-box-item1 info-box-item">
                        <text class="font-ee-sm">￥</text>
                        <text class="price">{{couponMoney}}</text>
                    </view>
                    <view  class="info-box-item2 info-box-item">
                    </view>
                    <view  class="info-box-item3 info-box-item">
                        <view class="ellipsis font-sm">{{desc}}</view>
                        <view class="font-ee-sm ellipsis">有效期至： {{endtime}}</view>
                    </view>
                </view>
                    <view class="color-y font-extra-sm">可用于购买丰盛微课堂任意课程</view>
                    <view class="color-y font-extra-sm">每次使用一张</view>
            </view>
            <view class="close-btn" bindtap="closeCoupon"  data-close='2'></view>
        </view>
    </view>
</template>